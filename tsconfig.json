{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": [
		"./dist/**/*", // Exclude build output directory
		"./server/**/*", // Exclude server-side code
		"./src/api.js" // Exclude specific JavaScript file
		// Ensure no files critical to cookie handling are excluded
	]
}
